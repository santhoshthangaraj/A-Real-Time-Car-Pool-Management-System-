<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_login_plain2"
    android:gravity="end"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

              <TextView
                  android:id="@+id/textView1"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignRight="@+id/fill_car_details"
                  android:layout_below="@+id/fill_car_details"
                  android:layout_marginRight="17dp"
                  android:text="Fill Details" />

              <Button
                  android:id="@+id/fill_car_details"
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  android:layout_alignLeft="@+id/text"
                  android:layout_below="@+id/text"
                  android:layout_marginLeft="25dp"
                  android:layout_marginTop="21dp"
                  android:onClick="car_fill_details"
                  android:background="@drawable/car_fill_details" />

              <Button
                  android:id="@+id/button2"
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  android:layout_alignLeft="@+id/fill_car_details"
                  android:layout_below="@+id/textView1"
                  android:layout_marginTop="22dp"
                  android:onClick="car_plan_trip"
                  android:background="@drawable/car_plan_trip"
                   />

              <TextView
                  android:id="@+id/textView3"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignRight="@+id/textView1"
                  android:layout_below="@+id/button2"
                  android:text="Plan Trip" />

              <TextView
                  android:id="@+id/textView5"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignLeft="@+id/textView3"
                  android:layout_below="@+id/button4"
                  android:text="Cancel Trip" />

              <Button
                  android:id="@+id/t"
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  android:layout_alignLeft="@+id/button1"
                  android:layout_alignTop="@+id/button4"
                  android:onClick="car_track_hh"
                  android:background="@drawable/car_track_hh"
                   />

              <TextView
                  android:id="@+id/textView2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_above="@+id/button2"
                  android:layout_alignLeft="@+id/textView4"
                  android:text="Update Details" />

              <Button
                  android:id="@+id/button4"
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  android:layout_alignLeft="@+id/textView5"
                  android:layout_below="@+id/textView3"
                  android:layout_marginTop="24dp"
                  android:onClick="car_cancel_trip"
                  android:background="@drawable/car_cancel_trip" />

              <Button
                  android:id="@+id/button1"
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  android:layout_above="@+id/textView2"
                  android:layout_alignRight="@+id/text"
                  android:layout_marginRight="46dp"
                  android:onClick="car_update_details"
                  android:background="@drawable/car_update_details" />

              <TextView
                  android:id="@+id/textView7"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentBottom="true"
                  android:layout_toRightOf="@+id/textView5"
                  android:text="" />

              <TextView
                  android:id="@+id/text"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true"
                  android:gravity="center"
                  android:paddingTop="20dp"
                  android:text="What is on your mind"
                  android:textAppearance="?android:attr/textAppearanceMedium" />

              <Button
                  android:id="@+id/button3"
                  android:layout_width="80dp"
                  android:layout_height="80dp"
                  android:layout_above="@+id/textView3"
                  android:layout_alignLeft="@+id/t"
                  android:onClick="car_change_trip"
                  android:background="@drawable/car_change_trip" />

              <TextView
                  android:id="@+id/textView4"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_above="@+id/button4"
                  android:layout_alignRight="@+id/button3"
                  android:text="Change Trip" />

              <TextView
                  android:id="@+id/textView6"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignRight="@+id/t"
                  android:layout_below="@+id/t"
                  android:text="Track Hitchiker" />

</RelativeLayout>

